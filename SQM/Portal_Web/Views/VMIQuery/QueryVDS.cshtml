@Scripts.Render("~/bundles/VMIShare")
@Scripts.Render("~/bundles/VMIQuery/QueryVDS")

@RenderPage("~/Views/VMIShare/dialogDownloadSplash.cshtml")
@RenderPage("~/Views/VMIShare/dialogQueryPlant.cshtml")
@RenderPage("~/Views/VMIShare/dialogQuerySBUVendor.cshtml")
@RenderPage("~/Views/VMIShare/dialogQueryBuyer.cshtml")
@RenderPage("~/Views/VMIQuery/QueryVDS/dialogQueryVDSManage.cshtml")

<div id="tbQueryVDS">
    <table class="ui-widget-header ui-corner-all" style="width:812px; padding:3px 15px 3px 15px; font-size:10.5px;">
        <tr>
            <td colspan="4"><button id="btnQueryVDS"></button></td>
        </tr>
    </table>
    <div style="width:811px;padding:3px 0; border-right: 1px solid #aaaaaa;">
        <table style="width:500px;">
            <tr id="trReportDate" style="display:none">
                <td class="tdTitleAlignRight">Report Date:</td>
                <td colspan="3">
                    <input type="text" id="from" name="from" class="tdQueryTextBox">&nbsp;~&nbsp;<input type="text" id="to" name="to" class="tdQueryTextBox">
                </td>
            </tr>
            <tr>
                <td class="tdTitleAlignRight">Plant:</td>
                <td>
                    <input type="text" id="txtPlant" maxlength="4" class="tdQueryTextBox" />
                    <button id="btnOpenQueryPlantDialog" class="tdQueryButton"></button>
                </td>
                <td class="tdTitleAlignRight">Vendor Code:</td>
                <td>
                    <input type="text" id="txtVendorCode" maxlength="10" class="tdQueryTextBox" />
                    <button id="btnOpenQueryVendorCodeDialog" class="tdQueryButton"></button>
                </td>
            </tr>
            <tr>
                <td class="tdTitleAlignRight">Buyer Code:</td>
                <td>
                    <input type="text" id="txtBuyerCode" maxlength="3" class="tdQueryTextBox" />
                    <button id="btnOpenQueryBuyerCodeDialog" class="tdQueryButton"></button>
                </td>
                <td class="tdTitleAlignRight">Type:</td>
                <td>
                    <input type="radio" name="queryType" id="lastVer" value="lastVer" checked="checked" /><label for="lastVer">Last Version</label><br />
                    <input type="radio" name="queryType" id="history" value="history" /><label for="history">VDS History</label><br />
                    <input type="radio" name="queryType" id="verCompare" value="verCompare" /><label for="verCompare">Version Comparsion</label>
                </td>
            </tr>
            <tr>
                <td class="tdTitleAlignRight">Material(FM):</td>
                <td>
                    <input type="text" id="txtMaterialFrom" class="tdQueryTextBox" />
                </td>
                <td class="tdTitleAlignRight">Material(TO):</td>
                <td>
                    <input type="text" id="txtMaterialTo" class="tdQueryTextBox" />
                </td>
            </tr>
        </table>
    </div>
</div>

<div>
    <table id="gridVDS"></table>
    <div id="gridVDSListPager"></div>
</div>